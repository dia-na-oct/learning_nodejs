<!DOCTYPE html>
<html lang="en">
    <%- include('./prtials/head.ejs')%>

<body>
<h1>title: <%= title %></h1>
  
<%- include('./prtials/nav.ejs')%>

<div class="blog content">
    <h2>all blogs </h2>


 <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a href="/blogs/<%= blog._id%>" class="single" >
                <h3 class="title" style="color: red;">   <%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
            <p class="body"><%= blog.body %></p>
        </a>
            <br>
        <% }); %>
    <% } else { %>
        <p>No blogs available.</p>
    <% } %>
</div>
</body>
</html>